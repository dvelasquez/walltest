{
  "testEnvironment": "jsdom",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts",
    "!src/**/*.fixture.ts",
    "!src/**/*.test.ts",
    "!src/**/__mocks__/"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "moduleNameMapper": {
    "\\.(css|less|scss|sss|styl)$": "<rootDir>/src/__mocks__/styleMock.js"
  },
  "setupFilesAfterEnv": ["@testing-library/jest-dom/extend-expect"]
}
